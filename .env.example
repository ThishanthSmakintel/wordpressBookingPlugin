# AppointEase WordPress Booking Plugin - Environment Configuration

# WordPress Configuration
WP_DEBUG=false
WP_DEBUG_LOG=false

# Plugin Settings
APPOINTEASE_DEMO_MODE=false
APPOINTEASE_DEMO_OTP=123456

# Business Hours (24-hour format)
APPOINTEASE_START_TIME=09:00
APPOINTEASE_END_TIME=17:00
APPOINTEASE_SLOT_DURATION=60

# Working Days (0=Sunday, 1=Monday, ..., 6=Saturday)
APPOINTEASE_WORKING_DAYS=1,2,3,4,5

# Booking Limits
APPOINTEASE_ADVANCE_BOOKING_DAYS=30
APPOINTEASE_MIN_BOOKING_HOURS=2

# Session Configuration
APPOINTEASE_SESSION_EXPIRY=3600

# Email Configuration
APPOINTEASE_ADMIN_EMAIL=admin@example.com
APPOINTEASE_FROM_EMAIL=noreply@example.com
APPOINTEASE_FROM_NAME=AppointEase

# Webhook Configuration (optional)
APPOINTEASE_WEBHOOK_URL=

# Rate Limiting
APPOINTEASE_RATE_LIMIT_REQUESTS=60
APPOINTEASE_RATE_LIMIT_WINDOW=60
